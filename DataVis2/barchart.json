{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Number of Schools by Type",
  "height": 400,
  "width": 400,
  "data": {
    "url": "SAschools.csv"
  },
  "transform": [
    {
      "aggregate": [{"op": "count", "as": "Total Schools"}],
      "groupby": ["School_Type"]
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "School_Type",
          "type": "nominal",
          "title": "School Type",
          "sort": ["Primary Education", "Secondary Education", "Primary/Secondary Combined","Special Education", "Aboriginal/Anangu Schools"],
          "axis": {"labels": false}
        },
        "y": {
          "field": "Total Schools",
          "type": "quantitative",
          "title": "Number of Schools"
        },
        "color": {
          "field": "School_Type",
          "type": "nominal",
          "title": "School Type",
          "scale": {"scheme": "category10"},
          "legend": {
            "orient": "top-right",
            "labelFontSize": 12
          }
        },
        "tooltip": [
          {
            "field": "School_Type",
            "type": "nominal",
            "title": "School Type"
          },
          {
            "field": "Total Schools",
            "type": "quantitative",
            "title": "Total Schools"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "bottom",
        "dy": -5,
        "fontSize": 12,
        "font": "Arial"
      },
      "encoding": {
        "x": {
          "field": "School_Type",
          "type": "nominal",
          "axis": {"labels": false},
          "title": "School Type",
          "sort": ["Primary Education", "Secondary Education", "Primary/Secondary Combined","Special Education", "Aboriginal/Anangu Schools"]
        },
        "y":{
          "field": "Total Schools",
          "type": "quantitative"
        },
        "text":{
          "field":"Total Schools",
          "type": "quantitative"
        }
      }

    }
  ]
}
