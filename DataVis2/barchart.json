{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Total Number of Schools by Type",
    "height": 400,
    "width": 400,
    "data": {
      "url": "SAschools.csv"
    },
    "transform": [
      {
        "aggregate": [{"op": "count", "as": "Total Schools"}],
        "groupby": ["School_Type"]
      }
    ],
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "School_Type",
        "type": "nominal",
        "title": "School Type",
        "sort": "-y"
      },
      "y": {
        "field": "Total Schools",
        "type": "quantitative",
        "title": "Number of Schools"
      },
      "color": {
        "field": "School_Type",
        "type": "nominal",
        "title": "School Type",
        "scale": {"scheme": "category10"}
      },
      "tooltip": [
        {"field": "School_Type", "type": "nominal", "title": "School Type"},
        {"field": "Total Schools", "type": "quantitative", "title": "Total Schools"}
      ]
    }
  }
  