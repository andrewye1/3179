{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "height": 400,
    "width": 400,
    "title": "Total School Enrolment by Type of School",
    "data": {
      "url": "SAschools.csv"
    },
    "transform": [
      {
        "fold": [
          "2015",
          "2016",
          "2017",
          "2018",
          "2019",
          "2020",
          "2021",
          "2022",
          "2023"
        ],
        "as": ["Year", "Enrollment"]
      },
      {
        "filter": {
          "param": "schoolTypeFilter"
        }
      },
      {
        "aggregate": [
          {
            "op": "sum",
            "field": "Enrollment",
            "as": "Total Enrollment"
          }
        ],
        "groupby": ["Year", "School_Type"]
      }
    ],
    "params": [
      {
        "name": "schoolTypeFilter",
        "select": {
          "type": "point",
          "fields": ["School_Type"]
        },
        "bind": "legend"
      }
    ],
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Year",
        "type": "ordinal"
      },
      "y": {
        "field": "Total Enrollment",
        "type": "quantitative",
        "title": "Total Enrollment (Students)",
        "scale": {
          "nice": true,
          "zero": true
        }
      },
      "color": {
        "field": "School_Type",
        "type": "nominal",
        "title": "School Type",
        "scale": {
          "scheme": "category10"
        },
        "legend": {
          "orient": "bottom",
          "direction": "horizontal",
          "columns": 2,
          "labelFontSize": 12
        }
      },
      "tooltip": [
        {
          "field": "Year",
          "type": "ordinal"
        },
        {
          "field": "School_Type",
          "type": "nominal",
          "title": "School Type"
        },
        {
          "field": "Total Enrollment",
          "type": "quantitative",
          "title": "Total Enrollment (Students)",
          "format":"d"
        }
      ]
    }
  }
  