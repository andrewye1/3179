{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "title": "South Australia Schools Enrollment (2023)",
  "background": "lightblue",
  "params": [
    {
      "name": "zoom_level",
      "value": 3000,
      "bind": {
        "input": "range",
        "min": 1000,
        "max": 50000,
        "step": 1000,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [138.60, -34.93],
      "bind": {
        "input": "select",
        "element": "",
        "options": [
          [138.60, -34.93],
          [138.74, -34.58],
          [140.78, -37.82],
          [138.85, -35.07],
          [137.57, -33.03],
          [139.27, -35.12],
          [138.62, -35.55],
          [137.73, -34.99],
          [135.86, -34.72],
          [138.01, -33.18]
        ],
        "labels": ["Adelaide", "Gawler", "Mount Gambier", "Mount Barker" , "Whyalla" , "Murray Bridge" , "Victor Harbor", "Crafers-Bridgewater" , "Port Lincoln", "Port Pirie"],
        "name": "Map Center: "
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "layer": [
    {
      "data": {
        "url": "output.json",
        "format": {"type": "topojson", 
        "feature": "sa_localities"}
      },
      "mark": {
        "type": "geoshape", 
        "fill": "lightgrey", 
        "stroke": "lightslategrey"}
    },
    {
      "mark": {"type": "geoshape", 
      "stroke": null},
      "data": {
        "url": "output.json",
        "format": {"type": "topojson", 
        "feature": "ne_110m_graticules_1"}
      },
      "projection": {
        "type": "mercator",
        "center": {"expr": "center_to"},
        "scale": {"expr": "zoom_level"}
      }
    },
    {
      "data": {
        "url": "SAschools.csv"
      },
      "mark": {"type": "circle"},
      "encoding": {
        "longitude": {"field": "Longitude", 
        "type": "quantitative"},
        "latitude": {"field": "Latitude", 
        "type": "quantitative"}, 
        "color": {
          "field": "School_Type",
          "type": "nominal",
          "title": "School Type",
          "scale": {"scheme": "category10"},
          "legend":{
            "orient": "left",
            "labelFontSize": 12,
            "labelFont": "Arial"

          }
        },
        "tooltip": [
          {"field": "School_Name", 
          "type": "nominal", 
          "title": "School Name"},
          
          {"field": "2023", 
          "type": "quantitative", 
          "title": "Enrollment (2023)"},
          
          {"field": "Suburb", 
          "type": "nominal", 
          "title": "Suburb"},

          {"field": "Post_Code", 
          "type": "nominal", 
          "title": "Postcode"}
        ]
      }
    }
  ]
}
