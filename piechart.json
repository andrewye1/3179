{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 400,
  "width": 400,
  "title": "Percentage of Schools by Type",
  "data": {
    "url": "SAschools.csv"
  },
  "transform": [
    {
      "aggregate": [{"op": "count", "as": "TotalSchools"}],
      "groupby": ["School_Type"]
    },
    {
      "joinaggregate": [{
        "op": "sum",
        "field": "TotalSchools",
        "as": "SummedTotalSchools"
      }]
    },
    {
      "calculate": "format((datum.TotalSchools/datum.SummedTotalSchools) * 100, ',.2f')",
      "as": "Percentage" 
    }
  ],

  "mark": {"type": "arc", "innerRadius": 120},
  "encoding": {
    "theta": {
      "field": "Percentage", 
      "type": "quantitative"
    },

    "color": {
      "field": "School_Type", 
      "type": "nominal",
      "legend": null
    },
    "tooltip": [
          {
            "field": "School_Type",
            "type": "nominal",
            "title": "School Type"
          },
          {
            "field": "Percentage",
            "type": "quantitative",
            "title": "Percentage of Schools",
            "format":""
          }
        ]

      }
}
