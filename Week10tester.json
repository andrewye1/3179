{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "South Australia Government Schools Enrollment by School Type",
  "autosize": {
    "type": "fit",
    "resize": true,
    "contains": "padding"
  },
  "resolve": {
    "legend": {
      "color": "independent"
    }
  },
  "vconcat": [
    {
      "height": 400,
      "width": 600,
      "projection": {
        "type": "mercator"
      },
      "layer": [
        {
          "data": {
            "url": "output.json",
            "format": {
              "type": "topojson",
              "feature": "sa_localities"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "white"
          }
        },
        {
          "data": {
            "url": "output.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_graticules_1"
            }
          },
          "mark": {
            "type": "geoshape",
            "stroke": null
          }
        },
        {
          "data": {
            "url": "SAschools.csv"
          },
          "mark": {
            "type": "circle"
          },
          "encoding": {
            "longitude": {
              "field": "Longitude",
              "type": "quantitative"
            },
            "latitude": {
              "field": "Latitude",
              "type": "quantitative"
            },
            "size": {"value": 50}, 
            "color": {
              "field": "School_Type",
              "type": "nominal",
              "title": "School Type",
              "scale": {
                "scheme": "category10"
              },
              "legend": {
                "orient": "right"
              }
            },
            "tooltip": [
              {
                "field": "School_Name",
                "type": "nominal",
                "title": "School Name"
              },
              {
                "field": "2023",
                "type": "quantitative",
                "title": "Enrollment (2023)"
              },
              {
                "field": "Suburb",
                "type": "nominal",
                "title": "Suburb"
              },
              {
                "field": "Post_Code",
                "type": "nominal",
                "title": "Postcode"
              }
            ]
          }
        }
      ]
    },
    {
      "height": 400,
      "width": 600,
      "title": "South Australia School Enrollment by Type",
      "data": {
        "url": "SAschools.csv"
      },
      "transform": [
        {
          "fold": [
            "2015",
            "2016",
            "2017",
            "2018",
            "2019",
            "2020",
            "2021",
            "2022",
            "2023"
          ],
          "as": ["Year", "Enrollment"]
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "Enrollment",
              "as": "Total Enrollment"
            }
          ],
          "groupby": ["Year", "School_Type"]
        }
      ],
      "params": [
        {
          "name": "schoolTypeFilter",
          "select": {
            "type": "point",
            "fields": ["School_Type"]
          },
          "bind": "legend"
        }
      ],
      "mark": "line",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal"
        },
        "y": {
          "field": "Total Enrollment",
          "type": "quantitative"
        },
        "color": {
          "field": "School_Type",
          "type": "nominal",
          "title": "School Type (Click to filter)",
          "scale": {
            "scheme": "category10"
          },
          "legend": {
            "orient": "right"
          }
        },
        "opacity": {
          "condition": {
            "param": "schoolTypeFilter",
            "value": 1
          },
          "value": 0.1
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "ordinal"
          },
          {
            "field": "School_Type",
            "type": "nominal",
            "title": "School Type"
          },
          {
            "field": "Total Enrollment",
            "type": "quantitative",
            "title": "Total Enrollment"
          }
        ]
      }
    }
  ]
}
