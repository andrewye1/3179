{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
        "text": "Difference in number of Schools per Year",
        "fontSize": 12,
        "font": "Arial"
    },
    "height": 400,
    "width": 400,
    "data": {
      "url": "SchoolTotal.csv"
    },
    "mark": {
        "type": "line",
        "color": "red",
        "point": {"color": "darkred"}
    },
    "encoding": {
        "x":{
            "field": "Year",
            "type": "ordinal",
            "axis":{
                "domain": false,
                "ticks": false,
                "labelPadding": 4,
                "labelFontSize": 12,
                "labelFont": "Arial"
            }
        },
        "y":{
            "field": "Difference",
            "type": "quantitative",
            "axis":{
                "gridColor": {
                    "condition": {"test": "datum.value === 0", "value": "black"},
                    "value": "#ddd"
            },
            "labelFontSize": 12,
            "labelFont": "Arial"
        },
        "scale": {
            "domain": [-30,30]
        }
    },
    "tooltip": [
        {
        "field": "Year",
        "type": "ordinal",
        "title": "Year"
        },
        {
            "field": "Schools Total",
            "type": "quantitative",
            "title": "Total Operational Schools"
        },
        {
            "field": "Difference",
            "type": "quantitative",
            "title": "Change from Previous Year"
        }
    ]
    }
    
    

}